<div class="container">
    <div class="row">
        <p class="text-end"> Hola {{usuario}}! <a class= "btn btn-danger" href="/admin/login/logout">Cerrar Sesión <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
</div>

<div class="row">
    <div class="col-7" style= "margin-top: -9px">
        <h2>Listado de Novedades</h2>
    </div>
    <div class= "col-2 text-end" >
        <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"> </i>Nuevo</a>

    </div>
    <div class= "col-3 text-end" >
        <form class="form-inline my-2 my-lg-0">
            <input type="search" class="form-control mr-sm-2" placeholder="buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}> <button class="btn btn-secondary my-2 my-sm-0" type="submit" > <i class="fas fa-search" aria-hidden="true"></i></button>
        </form>

    </div>
</div>
<div>
    
    <table class="table">
        <thead>
             <tr>
                 <th scope="col">Id</th>
                 <th scope="col">Título</th>
                 <th scope="col" class="text-end">Acciones</th>
      
             </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td class="text-end">
                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><a class="fas fa-trash"></a>
                </td>
                  
            </tr>

            {{/each}}
    
        </tbody>
    </table>
    {{#if is_search}}
    {{#unless novedades_Length}}
    No se encontraron resultados para "<b>{{q}}</b>"
    {{/unless}}
    {{/if}}

</div>
