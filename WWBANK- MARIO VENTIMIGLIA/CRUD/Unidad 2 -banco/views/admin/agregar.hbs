<div class="container" style="margin: 100px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h4 style="margin-left: 20%;">Agregar una nueva novedad</h4>
      <form action="/admin/novedades/agregar" method="post">
        <div class="mb-3 row">
          <input
           
            class="form-control"
            placeholder="Titulo"
            name="titulo"
          />

        </div>
        <div class="mb-3 row">
          <textarea
            
            class="form-control"
            placeholder="Subtitulo"
            name="subtitulo"
          ></textarea>
        </div>

        <div class="mb-3 row">
          <textarea
            class="form-control"
            placeholder="Cuerpo"
            name="cuerpo"
          ></textarea>
        </div>
        <button
          type="submit"
          class="btn btn-primary"
          style="margin-left: 40%"
        >Guardar</button>
      </form>
      {{#if error}}
        <p>{{message}}</p>
      {{/if}}

    </div>
  </div>
</div>